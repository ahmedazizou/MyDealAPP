<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mydeal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.DashboardActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.UserProfileActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.ForgetPasswordActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.mydeal.ui.activities.fragments.BaseActivity">
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.RegisterActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.LoginActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.SplashActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.mydeal.ui.activities.fragments.MainActivity"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>